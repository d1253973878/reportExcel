.newtec-menuext{
	padding: 0;
	display: inline-block;
	height: 100%;
}
.newtec-menuext ul{
	padding:0;margin:0;list-style:none
}
.newtec-menuext ul>li{
	/*margin: 5px 0;*/
	color: #90a3b1;
	text-align: center;
	font-size: 16px;
    font-weight: 600;
    padding: 15px;
    cursor: pointer;
    position: relative;
}
.newtec-menuext>.secord-div>ul{
	margin-top: 10px;
}
.newtec-menuext>.secord-div>ul>li{
	font-size: 14px;
	padding:10px 15px;
	color:#a1a5a7;
}
.newtec-menuext ul>li>.triangle{
    width: 0;
    height: 0;
    border: 10px solid transparent;
    border-left-color: #118eea;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
    right: -20px;
    display: none;
}
.newtec-menuext ul>li>div>img{
	width: 25px;
	margin-bottom: 5px;
}
.newtec-menuext>div{
	height: 100%;
	float: left;
}
.newtec-menuext>div.first-div{
	background: #052443;
}
.newtec-menuext>div.secord-div{
	background: #103979;
}
.newtec-menuext ul>li.active{
	background:#118eea;
	color: #fff;
}
.newtec-menuext>.secord-div ul>li.active{
	color: #71a9f0;
	background: transparent;
}
.newtec-menuext ul>li.active>.triangle{
	display: block;
}
