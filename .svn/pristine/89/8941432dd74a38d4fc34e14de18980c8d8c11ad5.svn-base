.formCode,
.formName,
.formHasPage,
.formRequestType,
.formSubmit {
  flex: 1 1 20%;
  padding-top: 10px;
  align-items: center;
}

.formCode input,
.formCode input {
  width: 200px;
}

.formApiUrl,
.formBtn {
  flex: 1 1 50%;
  padding: 10px;
}

.loadingDiv {
  position: absolute;
  display: flex;
  left: 0;
  top: 0;
  background-color: #000;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  justify-content: center;
  align-items: center;
  z-index: 1;
}

.formBtnItem {
  width: 100px;
}

.formBtnItem:last-child {
  margin-top: 10px;
}
